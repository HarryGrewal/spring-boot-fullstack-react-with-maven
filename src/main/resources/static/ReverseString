import java.util.Scanner; class Rextester { public static void main(String args[]) { final char[] chars = new Scanner(System.in).nextLine().toCharArray(); reverseString(chars); System.out.println(chars); } public static void helper(char[] s, int left, int right) { if (left >= right) return; char tmp = s[left]; s[left++] = s[right]; s[right--] = tmp; helper(s, left, right); } public static void reverseString(char[] s) { helper(s, 0, s.length - 1); } }
